generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum EquipmentType {
  PADDLE
  SHOE
}

enum TournamentTier {
  MAJOR
  PPA
  MLP
  APP
  OTHER
}

model Player {
  id              String            @id @default(cuid())
  name            String
  slug            String            @unique
  ranking         Int?
  country         String?
  imageUrl        String?
  deletedAt       DateTime?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  equipmentUsages EquipmentUsage[]
  matchResults    MatchResult[]

  @@index([slug])
  @@index([deletedAt])
}

model Equipment {
  id             String            @id @default(cuid())
  name           String
  slug           String            @unique
  brand          String
  type           EquipmentType
  imageUrl       String?
  description    String?
  specs          Json?
  deletedAt      DateTime?
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  usages         EquipmentUsage[]
  affiliateLinks AffiliateLink[]

  @@index([type, brand])
  @@index([slug])
  @@index([deletedAt])
}

model EquipmentUsage {
  id          String    @id @default(cuid())
  playerId    String
  equipmentId String
  startDate   DateTime  @default(now())
  endDate     DateTime?
  verified    Boolean   @default(false)
  source      String?
  player      Player    @relation(fields: [playerId], references: [id], onDelete: Restrict)
  equipment   Equipment @relation(fields: [equipmentId], references: [id], onDelete: Restrict)

  @@unique([playerId, equipmentId, startDate])
  @@index([playerId, startDate, endDate])
  @@index([equipmentId])
}

model Tournament {
  id           String        @id @default(cuid())
  name         String
  slug         String        @unique
  tier         TournamentTier
  startDate    DateTime
  endDate      DateTime
  location     String?
  deletedAt    DateTime?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  matchResults MatchResult[]

  @@index([slug])
  @@index([tier])
  @@index([startDate])
  @@index([deletedAt])
}

model MatchResult {
  id           String     @id @default(cuid())
  playerId     String
  tournamentId String
  placement    Int
  points       Int
  matchDate    DateTime
  eventType    String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  player       Player     @relation(fields: [playerId], references: [id], onDelete: Restrict)
  tournament   Tournament @relation(fields: [tournamentId], references: [id], onDelete: Restrict)

  @@unique([playerId, tournamentId, eventType])
  @@index([playerId, matchDate])
  @@index([tournamentId])
  @@index([placement])
}

model AffiliateLink {
  id          String    @id @default(cuid())
  equipmentId String
  retailer    String // "selkirk", "justpaddles", "pickleballsuperstore", "amazon"
  url         String
  priority    Int       @default(0) // Higher = preferred
  commission  Float? // Percentage for tracking
  validatedAt DateTime?
  expiresAt   DateTime?
  isActive    Boolean   @default(true)
  equipment   Equipment @relation(fields: [equipmentId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([equipmentId, retailer])
  @@index([equipmentId, priority])
}

model DataSourceMapping {
  id           String   @id @default(cuid())
  entityType   String // "player", "tournament", "equipment"
  internalId   String
  sourceName   String // "ppa", "apt", "theslice"
  externalId   String
  lastSyncedAt DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([sourceName, entityType, externalId])
  @@index([entityType, internalId])
}
